<?xml version="1.0"?>
<psalm
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="bundle" />
        <directory name="lib" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <!-- Symfony BC layer -->

        <InvalidArgument>
            <errorLevel type="suppress">
                <referencedFunction name="Symfony\Component\EventDispatcher\EventDispatcherInterface::dispatch" />
            </errorLevel>
        </InvalidArgument>

        <PossiblyUndefinedMethod>
            <errorLevel type="suppress">
                <referencedMethod name="Symfony\Component\Config\Definition\Builder\NodeDefinition::children" />
            </errorLevel>
        </PossiblyUndefinedMethod>

        <UndefinedClass>
            <errorLevel type="suppress">
                <referencedClass name="Symfony\Component\Debug\Exception\FlattenException" />
            </errorLevel>
        </UndefinedClass>

        <DeprecatedTrait>
            <errorLevel type="suppress">
                <file name="bundle/EventListener/ExceptionConversionListener.php" />
                <file name="bundle/EventListener/ExceptionSerializerListener.php" />
            </errorLevel>
        </DeprecatedTrait>

        <!-- Pagerfanta -->

        <ImplementedReturnTypeMismatch>
            <errorLevel type="suppress">
                <directory name="lib/Pager" />
            </errorLevel>
        </ImplementedReturnTypeMismatch>

        <!-- level 3 issues - slightly lazy code writing, but probably low false-negatives -->

        <DeprecatedClass errorLevel="info" />
        <DeprecatedMethod errorLevel="info" />
        <MissingPropertyType errorLevel="info" />
        <PropertyNotSetInConstructor errorLevel="info" />
    </issueHandlers>
</psalm>
